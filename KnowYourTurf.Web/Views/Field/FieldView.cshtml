@model KnowYourTurf.Web.Models.FieldViewModel
@using FubuMVC.Core.Runtime
@using KnowYourTurf.Core
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI

@{
    Layout = "~/Views/Shared/_popupLayout.cshtml";
}
        @MvcHtmlString.Create(Html.HiddenFor(x => x.Field.EntityId, new { @class = "copyEntityId" }).ToString())
            @MvcHtmlString.Create(Html.HiddenFor(x => x.AddEditUrl).ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.Field.Name).ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.Field.Description).ToString())
            
            @MvcHtmlString.Create(Html.ViewFor(x => x.Field.Size).ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.Field.Status).ToString())
            @MvcHtmlString.Create(Html.ViewFor(x => x.Field.ImageUrl).HideLabel().AddClassToInput("KYT_displayImage").ToString())
