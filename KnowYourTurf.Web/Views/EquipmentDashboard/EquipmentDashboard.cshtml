@model KnowYourTurf.Web.Controllers.EquipmentViewModel
@using CC.Core.Html.CCUI
@using KnowYourTurf.Web

@{ Layout = "~/Views/Shared/_EmptyLayout.cshtml"; }

    
<div class="row">
    @Html.SubmissionFor(x => x.Name).Size("5").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.ID).Size("5").ToHtmlTag()
    @Html.SubmissionFor(x => x.Make).Size("5").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.Model).Size("5").ToHtmlTag()
    @Html.SubmissionFor(x => x.SerialNumber).Size("5").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.WarrentyInfo).Size("10").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.Description).Size("10").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.EquipmentTypeEntityId).Size("5").LabelDisplay(WebLocalizationKeys.EQUIPMENT_TYPE).ToHtmlTag()
    @Html.SubmissionFor(x => x.EquipmentVendorEntityId).Size("5").LabelDisplay(WebLocalizationKeys.VENDOR).ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.TotalHours).Size("5").ToHtmlTag()
    @Html.SubmissionFor(x => x.Threshold).Size("5").ToHtmlTag()
</div>
<div class="row">
    @Html.SubmissionFor(x => x.WebSite).Size("10").ToHtmlTag()
</div>
            
<div class="row">
    @Html.SubmissionFor(x => x._Photos).Size("20").InputId("photoGallery").HideLabel().ToHtmlTag()
</div> 
<div class="row">
    <div class="span10">
        @StandardButtonFor("save", WebLocalizationKeys.SAVE).AddClass("save").ToHtmlTag()
        @StandardButtonFor("cancel", WebLocalizationKeys.CANCEL).AddClass("cancel").ToHtmlTag()
    </div>
</div>
<div class="row"><div class="span20"><hr/></div></div>

<div class="row">
@*-----------Left Column-------------*@
    <div class="span10">
        <div class="row dashboardGrid">
            <div class="span10">
                <div class="gridHeader">@WebLocalizationKeys.PENDING_EQUIPMENT_TASKS</div>
                <div id="pendingEquipmentTaskGridContainer" class="dashboardGrid"></div>
            </div>
        </div>
        <div class="row  dashboardGrid">
            <div class="span10">
                <div class="gridHeader">@WebLocalizationKeys.PHOTOS</div>
                <div id="photoGridContainer" class="dashboardGrid"></div>
            </div>
        </div>
    </div>
   
    <div class="span10">
        <div class="row  dashboardGrid">
            <div class="span10">
                <div class="gridHeader">@WebLocalizationKeys.COMPLETED_EQUIPMENT_TASKS</div>
                <div id="completedEquipmentTaskGridContainer" class="dashboardGrid"></div>
            </div>
        </div>
        <div class="row  dashboardGrid">
            <div class="span10">
                <div class="gridHeader">@WebLocalizationKeys.DOCUMENTS</div>
                <div id="documentGridContainer" class="dashboardGrid"></div>
            </div>
        </div>
    </div>
</div>
