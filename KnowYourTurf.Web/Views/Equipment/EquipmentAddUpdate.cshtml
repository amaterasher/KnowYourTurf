@model EquipmentViewModel
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI
@using KnowYourTurf.Web.Controllers
@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

   <div class="col left">
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.Name).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.Description).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.VendorEntityId).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.TotalHours).ToHtmlTag()
        </div>
        <div class="fieldRow">
             <div id="showImage" >
                @Html.ViewFor(x => x.ImageUrl).HideLabel().AddClassToInput("KYT_displayImage").ToHtmlTag()
                @StandardButtonFor("deleteImage", WebLocalizationKeys.DELETE).ToHtmlTag()
            </div>
            <div id="newImage">
                <p><input type="file" id="fileUpload" name="fileUpload" size="23"/></p><br />
        </div>
    </div>
</div>

