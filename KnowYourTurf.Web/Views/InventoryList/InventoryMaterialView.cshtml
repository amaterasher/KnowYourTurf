@model KnowYourTurf.Web.Controllers.InventoryMaterialViewModel
@using KnowYourTurf.Core
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI

@{
    Layout = "~/Views/Shared/_DisplayLayout.cshtml";
}
  <div class="col left">
        <div class="fieldRow">
            @Html.ViewFor(x => x.Material.Name).ToHtmlTag()
         </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.Material.Description).ToHtmlTag()
         </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.InventoryMaterial.Quantity).ToHtmlTag()
         </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.InventoryMaterial.SizeOfUnit).ToHtmlTag()
         </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.InventoryMaterial.UnitType).ToHtmlTag()
         </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.InventoryMaterial.LastVendor.Company).LabelDisplay(WebLocalizationKeys.PREVIOUS_VENDOR).ToHtmlTag()
         </div>
    </div>

