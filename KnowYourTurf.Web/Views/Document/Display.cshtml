@model DocumentViewModel
@using KnowYourTurf.Core.Html.FubuUI
@using KnowYourTurf.Web
@using KnowYourTurf.Web.Controllers

@{
    Layout = "";
}
        @MvcHtmlString.Create(Html.HiddenFor(x => x.Document.EntityId, new { @class = "copyEntityId" }).ToString())
        @MvcHtmlString.Create(Html.HiddenFor(x => x.AddEditUrl).ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.Document.Name).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.Document.Description).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.Document.DocumentCategory.Name).AddClassToLabel("KYT_Label").AddClassToInput("KYT_Input").LabelDisplay(WebLocalizationKeys.DOCUMENT_CATEGORY).ToString())
        @MvcHtmlString.Create(Html.ViewFor(x => x.Document.FileUrl).AddDisplayNameForHref(Model.Document.Name).LabelDisplay(WebLocalizationKeys.VIEW_FILE).ToString())



