    @MvcHtmlString.Create(CSS("jquery-ui-timepicker.css").ToString())
    @MvcHtmlString.Create(CSS("superfish-1.4.8/superfish.css").ToString())
    @MvcHtmlString.Create(CSS("superfish-1.4.8/superfish-vertical.css").ToString())
    @MvcHtmlString.Create(CSS("ui-lightness/jquery-ui-1.8.7.custom.css").ToString())
    @RenderSection("ExtraCss", false)
    
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery-1.4.4.min.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery-ui-1.8.7.custom.min.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.validate.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.form.2.83.js").ToString())
    @MvcHtmlString.Create(Script("externalHelpers/superfish.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.utilities.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.crudForm.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.metadata.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.ae.image.resize.min.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.ui.timepicker-0.0.8.js").ToString())
    @MvcHtmlString.Create(Script("externalHelpers/json2.js").ToString())
    @MvcHtmlString.Create(Script("externalHelpers/underscore.js").ToString())
    @MvcHtmlString.Create(Script("externalHelpers/backbone.js").ToString())
    @MvcHtmlString.Create(Script("jqueryPlugins/jquery.pubsub.js").ToString())
     @MvcHtmlString.Create(Script("kyt.baseClasses.js").ToString())
    @MvcHtmlString.Create(Script("kyt.crudController.js").ToString())

    @MvcHtmlString.Create(Script("kyt.popupDisplayModule.js").ToString())
    @MvcHtmlString.Create(Script("kyt.popupFormModule.js").ToString())
    
    @MvcHtmlString.Create(Script("kyt.GridView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.DisplayView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.FormView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.PopupView.js").ToString())
    @MvcHtmlString.Create(Script("kyt.TokenView.js").ToString())
    @MvcHtmlString.Create(Script("internalHelpers/kyt.repository.js").ToString())

        @RenderSection("HeaderScripts", false)


     <script type="text/javascript">
        var kytWebSiteRoot="~";
        var entityId = @Model.EntityId ;
        var parentId = @Model.ParentId ;
        var rootId = @Model.RootId ;
        $(document).ready(function() {
            $(".collapsible h4").click(function() {
                $(this).toggleClass("collapsed");
                $(this).nextAll(".container").toggle();
            });
    
            $(".startsColllapsed h4").nextAll(".container").hide();

            $(".submitButton").live("click", function(event) {
                $("#CRUDForm").submit();
                event.preventDefault();
            });

            $(".submitButton2").live("click", function(event) {
                $("#CRUDForm").submit();
                event.preventDefault();
            });
             $("#errorMessages").hide();

            $(".datePicker").live('focusin', function() {
                var $this = $(this);
                $this.datepicker();
            });

            $(".timePicker").live('focusin', function() {
                var $this = $(this);
                 $this.timepicker({
                    showPeriod: true,
                    showLeadingZero: false
                });
            });
            
            $(".timePickerNoSuffix").live('focusin', function() {
                var $this = $(this);
                $this.timepicker({amPmText:["",""]});
            });
            $(".profileImage").aeImageResize({ height: 48, width: 48 });
            extraFormOptions = {};
        });
        @RenderSection("HeaderJavascript", false)

        </script>
    </head>

    <body class="kyt_dyn">
        <div id="background_layer">
            <div class="container_12">   
              <div class="KYT_960Main">
                <div class="grid_12">
                    <div class="KYT_site_header">
                        @Html.Action("KnowYourTurfHeader", "Orthogonal")
                    </div>
                </div>
                <div class = "grid_2">
                    @Html.Action("KnowYourTurfMenu", "Orthogonal")
                </div>
                <div class="grid_10">
                    <div id="errorMessages" class="errorMessages KYT_errorMessages" ><ul></ul></div>   
                    @RenderSection("SubHeader", false)
                    @RenderBody()
                </div>         
            <div class="grid_12" id="footer">
                <div class="powered"><p>© Copyright 2011 KYTsoftware, LLC.  All Rights Reserved</p></div>
            </div>
            <div style="clear:both;"></div>
        </div></div>
    </body>

</html>
