@using KnowYourTurf.Web
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    @MvcHtmlString.Create(CSS("960.css").ToString())
    @MvcHtmlString.Create(CSS("yui.reset.2.6.0.css").ToString())
    @MvcHtmlString.Create(CSS("site.css").ToString())
