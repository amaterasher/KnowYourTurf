@model KnowYourTurf.Web.Models.SandCalcViewModel
@using KnowYourTurf.Core.Html.Expressions;
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI
@using KnowYourTurf.Web.Controllers;

@{
    Layout = "~/Views/Shared/_popupLayout.cshtml";
}
    <div id="errorMessagesPU" class="mf_ErrorMessages errorMessages"><ul></ul></div>

            @MvcHtmlString.Create(FormFor<CalculatorController>(x=>x.Calculate(null)).Class("CRUD").ElementId("CRUDForm").ToString())

            @MvcHtmlString.Create(Html.HiddenFor(x => x.EntityId).ToString())
            @MvcHtmlString.Create(Html.HiddenFor(x => x.CalculatorName).ToString())
    <div class="col left">
        <div class="fieldRow">
            @Html.ViewFor(x => x.CalculatorDisplayName).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.Area).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.Diameter).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.SubmissionFor(x => x.Height).ToHtmlTag()
        </div>
        <div class="fieldRow">
            @Html.ViewFor(x => x.TotalSand).InputId("TotalSand").ToHtmlTag()
        </div>
    </div>
            @EndForm()
