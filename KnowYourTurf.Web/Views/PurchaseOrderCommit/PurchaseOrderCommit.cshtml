@{ Layout = "~/Views/Shared/_emptyLayout.cshtml"; }

        <div class="row">
            @Html.ViewFor(x => x.EntityId).LabelDisplay(WebLocalizationKeys.PO_NUMBER).RootId("viewPOID").ToHtmlTag()
        </div>
        <div class="row">
            @Html.ViewFor(x => x.VendorCompany).RootId("viewVendor").ToHtmlTag()
        </div>
        <div class="row blank"/>
        <div class="row">
            <div class="span10 gridHeader">@WebLocalizationKeys.PURCHASE_ORDER_LINE_ITEMS</div>
        </div>

        <div class="row">
            <div id="commitPoliGridArea" class="span20"></div>
        </div>

    <div class="footer">
        @StandardButtonFor("closePO", WebLocalizationKeys.CLOSE_THIS_PURCHASE_ORDER).AddClass("saveNotFixed").ToHtmlTag()
    </div>
